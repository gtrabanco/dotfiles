#!/usr/bin/env bash

os=$(uname | tr '[:upper:]' '[:lower:]')



case "$os" in
  *darwin*)
    if [[ -f "$(which open)" ]]; then
      $(which open) "$@"
    else
      open "$@"
    fi
    ;;
  *linux*)
    if grep -q Microsoft /proc/version; then
      cmd.exe /C start "$@"
    elif ! which open | grep 'not found'; then
      if [[ -f "$(which open)" ]]; then
        $(which open) "$@"
      else
        open "$@"
      fi
    elif ! which xdg-open | grep 'not found'; then
      xdg-open "$@"
    elif ! which gnome-open | grep 'not found'; then
      gnome-open "$@"
    fi
    ;;
  *cygwin*)
    cygstart "$@"
    ;;
  *)
    exit 1
    ;;
esac
# If should were possible to use bash on windows
# should use `start` command
